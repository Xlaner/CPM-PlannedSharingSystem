@using Portal.Domain.Entities;

@model UserListPageViewModal

@{
    ViewData["Title"] = "KullaniciYonetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	</head>



	<body>
	<h2>Kullanıcı Yönetimi</h2>

<table class="table table-bordered">
    <tr>
        <td> <div style="text-align:center;">Kullanıcı ID</div></td>
        <td>Kullanıcı Adı</td>
        <td>Kullanıcı Rolü</td>
        <td>Eklenme Tarihi</td>
        <td>Sil</td>
        <td>Düzenle</td>

    </tr>
    @foreach (var item in Model.User)
    {
<tr>
    <td> <div style="min-width:100px; text-align:center;">@item.Id </div></td>
    <td>@item.UserName</td>
    <td>@item.Role</td>
    <td>@item.CreatedDate</td>
    <td><a href="/Deneyimlerim/DeneyimSil/@item." class="btn btn-danger">Sil</a></td>
    <td><a href="/Deneyimlerim/DeneyimGetir/@item." class="btn btn-warning">Düzenle</a></td>
</tr>
    }
</table>
           
<button type="button" class="btn btn-primary" id="kullanicieklegetir" >Yeni Kullanıcı Ekle</button>

    <form method="post" action="/Home/KullanıcıEkle" enctype="multipart/form-data">
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="form-group" id="exampleModalLabel">YENİ KULLANICI EKLE</h1>
                    </div>
                    <div class="modal-body">

                        <h3>Kullanıcı Adı	</h3>
                        <div class="form-group"> @Html.TextBoxFor(elm=>elm.SingleUser.UserName, new {@class = "form-control", @type="text", @value = Model?.SingleUser.UserName}) </div>


                        <h3>Şifre</h3>
                        <div class="form-group"> @Html.TextBoxFor(elm=>elm.SingleUser.Password, new {@class = "form-control", @type="text", @placeholder="Etkinlik adını giriniz...", @value = Model?.SingleUser.Password}) </div>

                        <h3>Kullanıcı Rolü</h3>
                        <div class="form-group"> @Html.TextBoxFor(elm=>elm.SingleUser.Role, new {@class = "form-control", @type="text", @placeholder="Etkinlik metnini giriniz...", @value = Model?.SingleUser.Role}) </div>
                 
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
            </div>
        </div>
    </form>


    <script>
    $('body').on('click', '#kullanicieklegetir', function () {
            $(".modal").modal('show');
        })
    </script>


	</body>
</html>


