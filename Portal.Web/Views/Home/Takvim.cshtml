@{
    Layout = "_CalenderLayout";

}

@model EtkinlikEkleViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8' />

    <link href="~/fullcalendar-5.11.3/lib/main.css" rel="stylesheet" />
    <link href="~/fullcalendar-5.11.3/lib/main.min.css" rel="stylesheet" />
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css' rel='stylesheet'>




    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <script src="~/fullcalendar-5.11.3/lib/main.js"></script>

    <style>

        body {
            margin: 0;
            padding: 0;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 20px;
        }


        #calendar {
            max-width: 1100px;
            margin: 40px auto;
            padding: 0 10px;
            cursor: pointer;
            background-color: white;
        }

        /* Modal ve overlay için stiller */
        .black-container {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Yarı saydam siyah arkaplan */
            z-index: 9998; /* Overlay'ı takvimden daha altta tutmak için daha düşük bir z-index değeri */
        }

        .popup-container {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: aliceblue;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            z-index: 9999;
            border-radius: 10px;
            cursor: initial;
            min-width: 700px;
        }

        .popup-title {
            margin-left: 0%;
            transform: translate(-50% 0%);
        }

        .textblock {
            background-color: #a5b1c2;
            border: 2px solid black;
            text-align: center;
        }

    </style>
</head>
<body>



    <form method="post">
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="form-group"  id="exampleModalLabel">YENİ ETKİNLİK EKLE</h1>
                </div>
                <div class="modal-body">

                    <h3>Etkinlik Tarihi</h3>
                 <div class="form-group" > @Html.TextBoxFor(elm=>elm.start, new {@class = "form-control", @type="date", @value = Model?.start}) </div>


                    <h3>Etkinlik Adı</h3>
                    <div class="form-group" > @Html.TextBoxFor(elm=>elm.title, new {@class = "form-control", @type="text", @placeholder="Etkinlik adını giriniz...", @value = Model?.title}) </div>

                    <h3>Etkinlik Açıklaması</h3>
                    <div class="form-group" > @Html.TextAreaFor(elm=>elm.description, new {@class = "form-control", @type="text", @placeholder="Etkinlik metnini giriniz...", @value = Model?.description}) </div>
                    <div>
                        <h3>Fotoğraf Yükle</h3>
                    <div class="form-group" > @Html.TextBoxFor(elm=>elm.image, new {@class = "form-control", @type="file",  @value = Model?.image}) </div>
                    </div>


                    <h3 class="my-3">Paylaşılacak Platform</h3>

                    <div style="font-size: 20px;">
                           @Html.CheckBoxFor(elm=>elm.linkedin, new { @type="checkbox",  @value = Model?.linkedin})
                           <span class="bi bi-linkedin"></span>
                    </div>

                     <div style="font-size: 20px;">
                           @Html.CheckBoxFor(elm=>elm.whatsapp, new { @type="checkbox",  @value = Model?.whatsapp})
                           <span class="bi bi-whatsapp"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit"  class="btn btn-primary">Kaydet</button>
                </div>
            </div>
        </div>
    </div>
    </form>


    <div id='calendar'></div>


    <div class="black-container" id="black"></div>

    <div class="popup-container" id="popup-form">
    </div>
    <div class="popup-container" id="popup-info">
        <!-- Pop-up içeriği -->
        <h2 class="popup-title my-4">Etkinlik Bilgileri</h2>
        <p class="textblock" id="texttext1"></p>
        <p class="textblock" id="texttext2"></p>
        <p class="textblock" id="texttext3"></p>
        <p class="textblock" id="texttext4"></p>
        <p class="textblock" id="texttext5"></p>

        <a id="buton" class="btn btn-primary" onclick="closePopupInf()">kapat</a>
    </div>

    <div class="popup-container" id="popup-data">
        <h2 class="popup-title my-4" id="deneme">Etkinlik Oluşturma Ekranı</h2>
        <a id="buton" class="btn btn-primary" onclick="closePopupData()">kapat</a>
    </div>
</body>


<script>

    document.addEventListener('DOMContentLoaded', function () {
        moment.locale('tr');
        var calendarEl = document.getElementById('calendar');


        var calendar = new FullCalendar.Calendar(calendarEl, {

            displayEventTime: false,
            initialDate: '2023-08-04',
            initialView: 'dayGridMonth',
            firstDay: 1,
            locale: "tr",
            timeZone: 'local',
            themeSystem: 'bootstrap5',
            buttonText: {
                today: "Bugün",
                month: "Ay",
                week: "Hafta",
                day: "Gün",
                list: "Ajanda"

            },

            selectable: true,

            headerToolbar: {
                left: 'prev,next today',
                center: 'title',
                right: 'dayGridMonth,timeGridWeek,listMonth'
            },
            eventClick: function (Info) {
                var textElement1 = document.getElementById('texttext1');
                var textElement2 = document.getElementById('texttext2');
                var textElement3 = document.getElementById('texttext3');
                var textElement4 = document.getElementById('texttext4');
                var textElement5 = document.getElementById('texttext5');

                textElement1.innerText = "Etkinlik Adı : " + Info.event.title;
                textElement2.innerText = "Başlangıç Tarihi : " + moment(Info.event.start).format('LL');

                if (Info.event.end != null) {
                    textElement3.innerText = "Bitiş Tarihi : " + moment(Info.event.end).format('LL');
                }
                else {
                    textElement3.innerText = "Bitiş Tarihi : --";
                }
                if (Info.event.description != null) {
                    textElement4.innerText = "Açıklama : " + Info.event.description;
                }
                else {
                    textElement4.innerText = "Açıklama : --";
                }
                if (Info.event.id != null) {
                    var deneme = Info.event.linkedin;

                }
                else {
                    textElement5.innerText = "Metin : --";
                }

                openPopupInf();

            },


            dateClick: function (info) {   
            $(".modal").modal('show');
                /*
            var a=$("#exampleModal .modal-body");
            var b=$("#icerikdiv");
            $.ajax({
                type:"GET",
                url:"/Home/_mdletkinlikekleicerik",
                dataType:"html",
                cache:false,
                success:function(data){
                    a.html(data);
                    b.html(data);

                },
                error:function(xhr)
                {
                    alert('error');
                }
            });
            */
        },



            events: deneme,

        });


        calendar.render();


    });






    var deneme = [];

    $.ajax({
        url: '/Home/GetList', // Controller'dan dönen URL
        method: 'GET', // İsteğin türü (GET, POST, vb.)
        success: function (data) {
            // Controller'dan gelen JSON verisi "data" değişkeninde olacak
            // Burada veriyi bir liste olarak kullanabilirsiniz

            deneme = data;
            console.log(deneme);
        },
        error: function () {
            console.error("İstek sırasında bir hata oluştu.");
        }
    });







    //--------------------------------------------------------------------------------------------------------------------------------------------------
    function openPopupInf() {
        var popup = document.getElementById('popup-info');
        popup.style.display = 'block';

        // Overlay'ı etkinleştir
        var overlay = document.getElementById('black');
        overlay.style.display = 'block';
    }

    function closePopupInf() {
        var popup = document.getElementById('popup-info');
        popup.style.display = 'none';

        // Overlay'ı devre dışı bırak
        var overlay = document.getElementById('black');
        overlay.style.display = 'none';
    }
    //--------------------------------------------------------------------------------------------------------------------------------------------------
    function openPopupData() {
        var popup = document.getElementById("popup-data");
        popup.style.display = "block";

        var overlay = document.getElementById('black');
        overlay.style.display = 'block';
    }

    function closePopupData() {
        var popup = document.getElementById('popup-data');
        popup.style.display = 'none';

        // Overlay'ı devre dışı bırak
        var overlay = document.getElementById('black');
        overlay.style.display = 'none';
    }


</script>



</html>
