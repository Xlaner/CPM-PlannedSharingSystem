    Layout = "_CalenderLayout";

}

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8' />

    <link href="~/fullcalendar-5.11.3/lib/main.css" rel="stylesheet" />
    <link href="~/fullcalendar-5.11.3/lib/main.min.css" rel="stylesheet" />
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet'>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css' rel='stylesheet'>
    




   @* <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/locale/tr.min.js"></script>*@
    <script src="~/fullcalendar-5.11.3/lib/main.js"></script>


    <script>
        
        document.addEventListener('DOMContentLoaded', function () {
            moment.locale('tr');
            var calendarEl = document.getElementById('calendar');


            var calendar = new FullCalendar.Calendar(calendarEl, {
                
                displayEventTime: false,
                initialDate: '2023-08-04',
                initialView: 'dayGridMonth',
                firstDay:1,
                locale: "tr",
                timeZone: 'local',
                themeSystem: 'bootstrap5',
                buttonText: {
                    today: "Bugün",
                    month: "Ay",
                    week: "Hafta",
                    day: "Gün",
                    list: "Ajanda"

                },
                
                selectable: true,

                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,listMonth'
                },
                eventClick: function (Info) {
                    var textElement1 = document.getElementById('texttext1');
                    var textElement2 = document.getElementById('texttext2');
                    var textElement3 = document.getElementById('texttext3');
                    textElement1.innerText = "Etkinlik Adı : " + Info.event.title;
                    textElement2.innerText = "Başlangıç Tarihi : " + moment(Info.event.start).format('LL');
                    if(Info.event.end != null){
                        textElement3.innerText = "Bitiş Tarihi : " + moment(Info.event.end).format('LL');
                    }
                    else{
                        textElement3.innerText = "Bitiş Tarihi : --" 
                    }
                    
                    openPopupInf();

                },


                dateClick: function (info) {
                    

                    openPopupData();


                    // Burada tıklanan tarihle yapmak istediğiniz işlemleri yapabilirsiniz
                },



                events: [
                    {
                        "title": "Event 1",
                        "start": "2023-08-05T09:00:00",
                        "end": "2023-08-05T18:00:00"
                    },
                    {
                        "title": "Event 2",
                        "start": "2023-08-08",
                        "end": "2023-08-10"
                    },
                    {
                        "title": "Event 3",
                        "start": "2023-08-15",
                        "end": "2023-08-19"
                    },
                    {
                        "title": "Event 4",
                        "start": "2023-08-19",
                        "end": "2023-08-20"
                    }
                ],
             
                

            });


            calendar.render();
            
            
        });


        var data = fetch("ver.json")
            .then(response => console.log(response))
            

                              

        //--------------------------------------------------------------------------------------------------------------------------------------------------
        function openPopupInf() {
            var popup = document.getElementById('popup-info');
            popup.style.display = 'block';

            // Overlay'ı etkinleştir
            var overlay = document.getElementById('black');
            overlay.style.display = 'block';
        }

        function closePopupInf() {
            var popup = document.getElementById('popup-info');
            popup.style.display = 'none';

            // Overlay'ı devre dışı bırak
            var overlay = document.getElementById('black');
            overlay.style.display = 'none';
        }
        //--------------------------------------------------------------------------------------------------------------------------------------------------   
        function openPopupData(){
            var popup = document.getElementById("popup-data");
            popup.style.display = "block";

            var overlay = document.getElementById('black');
            overlay.style.display = 'block';
        }

        function closePopupData() {
            var popup = document.getElementById('popup-data');
            popup.style.display = 'none';

            // Overlay'ı devre dışı bırak
            var overlay = document.getElementById('black');
            overlay.style.display = 'none';
        }

        
         </script>
    <style>

        body {
            margin: 0;
            padding: 0;
            font-family: Arial, Helvetica Neue, Helvetica, sans-serif;
            font-size: 20px;
        }

        
        #calendar {
            max-width: 1100px;
            margin: 40px auto;
            padding: 0 10px;
            cursor:pointer;
            background-color:white;
        }

        /* Modal ve overlay için stiller */
        .black-container {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Yarı saydam siyah arkaplan */
            z-index: 9998; /* Overlay'ı takvimden daha altta tutmak için daha düşük bir z-index değeri */
        }

        .popup-container {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            padding: 20px;
            background-color: aliceblue;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            z-index: 9999;
            border-radius: 10px;
            cursor: initial;
            min-width:700px;
        }

        .popup-title{
            
            margin-left:0%;
            transform:translate(-50% 0%);

            
        }

        .textblock{
            background-color: #a5b1c2;
            border: 2px solid black;
            text-align: center;
        }

    </style>
</head>
<body>



    
    <div id='calendar'></div>

    
    <div class="black-container" id="black"></div>

    <div class="popup-container" id="popup-form">

    </div>
    <div class="popup-container" id="popup-info">
        <!-- Pop-up içeriği -->
        <h2 class="popup-title my-4">Etkinlik Bilgileri</h2>
        <p class="textblock" id="texttext1"></p>
        <p class ="textblock" id="texttext2"></p>
        <p class="textblock" id="texttext3"></p>
        <a id="buton" class="btn btn-primary"  onclick="closePopupInf()">kapat</a>
    </div>
    
    <div class="popup-container" id="popup-data">
        <h2 class="popup-title my-4">Etkinlik Oluşturma Ekranı</h2>
        <a id="buton" class="btn btn-primary" onclick="closePopupData()">kapat</a>
    </div>
</body>
</html>
