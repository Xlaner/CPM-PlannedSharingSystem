@using Portal.Domain.Entities;
@model Etkinlik
@{
    Layout = "_AdminLayout";
}

<html>
<head>
    <style>

    </style>

</head>


	<body >
  
                    <div class="modal-header">
                        <h2 id="exampleModalLabel">@Model.title</h2>
                    </div>
                    <div class="modal-body">

                        <h4>Etkinlik Tarihi</h4>
                        <div class="form-group"> @Html.TextBoxFor(elm => elm.start, new { @class = "form-control", @type = "text", @readonly = "readonly" }) </div>

                        <h4>Etkinlik Adı</h4>
                        <div class="form-group"> @Html.TextBoxFor(elm => elm.title, new { @class = "form-control", @type = "text" , @readonly = "readonly"}) </div>

                        <h4>Etkinlik Metni</h4>
                        <div class="form-group"> @Html.TextAreaFor(elm => elm.description, new { @class = "form-control" , @readonly = "readonly"}) </div>
    
                         <h4>Fotoğraf</h4>
                        <div class="form-group" > <img src="~/Images/@Model.image"+".png" alt="Fotoğraf Görüntüsü" style="max-height:400px; max-width:400px;"></div>
<h4>Paylaşılacak Platform</h4>
<div style="font-size: 20px;">
    <label>
                <input  style="font-size:200px" type="checkbox" name="linkedin" @(Model.linkedin ==true ? "checked" : "") disabled />

        <span class="bi bi-linkedin"></span>
    </label>
</div>

<div >
    <label>
                <input type="checkbox" name="whatsapp" @(Model.whatsapp == true ? "checked" : "")disabled />
        <span class="bi bi-whatsapp"></span>
    </label>
</div>
 <div class="form-group"> 
     <br />

            <a  asp-controller="Home" asp-action="EtkinlikSil" asp-all-route-data="@(new Dictionary<string,string>(){{"Id",Model.Id.ToString()}})" class="btn btn-danger">Sil</a>
       
 </div> 

 </div>
    
      


	</body>
</html>







