<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="styles.css">
<title>Etkinlik Listesi</title>

<script>
    document.addEventListener("DOMContentLoaded", function() {
  const aciklamaMetinKutusu = document.querySelector(".etkinlik-aciklama");
  const karakterSayisi = document.querySelector(".sayi");

  aciklamaMetinKutusu.addEventListener("input", function() {
    const kalanKarakter = 3000 - this.value.length;
    karakterSayisi.textContent = kalanKarakter;
  });
});

    </script>


</head>
<body>
  <div class="etkinlik">
    <button class="kapat-buton">&times;</button>
    <h2>Etkinlik Adı</h2>
    <input type="text" class="etkinlik-ad" placeholder="Etkinlik adını giriniz...">
    <h3>Açıklama</h3>
    <textarea class="etkinlik-aciklama" placeholder="Etkinlik açıklamasını giriniz..." maxlength="3000"></textarea>
    <div class="karakter-sayisi">Kalan karakter: <span class="sayi">3000</span></div>
  </div>
  
</body>
</html>


